# PostgreSQL Configuration
POSTGRES_DB=cocktaildb
POSTGRES_USER=cocktaildb
POSTGRES_PASSWORD=cocktaildb

# Backend Configuration
DATABASE_URL=jdbc:postgresql://postgres:5432/cocktaildb
DATABASE_USERNAME=cocktaildb
DATABASE_PASSWORD=cocktaildb
SPRING_PROFILES_ACTIVE=prod

# CORS Configuration for Local Network Testing
# Use "*" to allow all origins (good for local network testing)
# Or specify allowed origins separated by commas: http://192.168.1.100,http://192.168.1.101
CORS_ALLOWED_ORIGINS=*

# Security Configuration (see SECURITY_CONCEPT.md for details)
# Generate hashes using: python3 -c "import bcrypt; print(bcrypt.hashpw(b'admin', bcrypt.gensalt(12)).decode().replace('\$2b\$', '\$2a\$'))"
# Admin password hash (CHANGE THIS - default is "admin")
ADMIN_PASSWORD_HASH=$$2a$$12$$otTzoEn6xSxOXHejDsMIt.WrbUnYKev1Mw2B.MJ4OHH5roMpZMW2S

# Barkeeper password hash (CHANGE THIS - default is "barkeeper")
BARKEEPER_PASSWORD_HASH=$$2a$$12$$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/LewY5GyYqK3GQRwu6

# Customer authentication token secret (CHANGE THIS - generate using: openssl rand -base64 64)
# This secret is used to sign customer authentication tokens for QR code access
CUSTOMER_TOKEN_SECRET=changeme-generate-a-random-secret-key-using-openssl-rand-base64-64

# Session secret for signing cookies (CHANGE THIS - generate using: openssl rand -base64 64)
SESSION_SECRET=changeme-generate-a-random-secret-key-using-openssl-rand-base64-64

# Session timeout in minutes (default: 60)
SESSION_TIMEOUT_MINUTES=60

# Bcrypt work factor for password hashing (default: 12, higher = more secure but slower)
BCRYPT_WORK_FACTOR=12

# Database Backup Configuration
# Cron time for automatic backups (default: 2 AM daily)
# Format: minute hour day month weekday
# Examples:
#   0 2 * * *    - Daily at 2 AM
#   0 */6 * * *  - Every 6 hours
#   0 3 * * 0    - Weekly on Sunday at 3 AM
BACKUP_CRON_TIME=0 2 * * *
